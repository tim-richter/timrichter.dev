---
export interface Props {
	title: string;
}

const { frontmatter } = Astro.props;

import '@fontsource/ibm-plex-mono';
import '@fontsource-variable/inter';
import '@fontsource-variable/jetbrains-mono';


import '../styles/base.css';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
	</head>

	<body class="bg-background text-text grid justify-center">
		<header class="mx-auto pt-4 pb-8">
			<ul class="flex gap-7">
				<li><a href="/" class="font-bold">Home</a></li>
				<li><a href="/blog" class="font-bold">Blog</a></li>
			</ul>
		</header>

		<main class="container min-h-screen px-2 overflow-x-auto">
			<slot />
		</main>

		<footer class="mt-16 mb-2 text-xs text-center">Â© 2021-present Tim Richter. All Rights Reserved.</footer>
	</body>
</html>

<style is:global>
	html {
		background-color: theme('colors.background');
		color: theme('colors.primary');
	}
</style>
